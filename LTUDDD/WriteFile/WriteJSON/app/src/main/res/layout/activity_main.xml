<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:lines="10"/>
    <Button
        android:id="@+id/btnChangeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Title"
        app:layout_constraintTop_toBottomOf="@id/txt1"/>
    <EditText
        android:id="@+id/edtNewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New title"
        app:layout_constraintTop_toBottomOf="@id/btnChangeTitle"/>
    <Button
        android:id="@+id/btnChangEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Edit Text"
        app:layout_constraintTop_toBottomOf="@id/edtNewTitle"/>
    <EditText
        android:id="@+id/edtChangeStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New title"
        app:layout_constraintTop_toBottomOf="@id/btnChangEditText"/>
    <Button
        android:id="@+id/btnChangeStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Status"
        app:layout_constraintTop_toBottomOf="@id/edtChangeStatus"/>
</androidx.constraintlayout.widget.ConstraintLayout>