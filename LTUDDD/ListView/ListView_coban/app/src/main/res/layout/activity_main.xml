<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:onClick="openDisplayListView1"
        android:id="@+id/btnListView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Basic ListView - Array" />

    <Button
        android:onClick="openDisplayListView2"
        android:id="@+id/btnListView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Basic ListView - String Values" />

    <Button
        android:onClick="openDisplayListView3"
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic ListView - Object" />
</LinearLayout>