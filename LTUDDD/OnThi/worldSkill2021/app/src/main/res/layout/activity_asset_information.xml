<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <include
        android:id="@+id/action_bar_info_asset"
        layout="@layout/actionbar_asset_information" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_below="@+id/action_bar_info_asset">
        <TextView
            android:id="@+id/txtText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asset Name"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="500dp"/>
        <EditText
            android:id="@+id/edtAssetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtText1"/>
        <Spinner
            android:id="@+id/spDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_min="120dp"
            app:layout_constraintWidth_max="180dp"
            app:layout_constraintTop_toBottomOf="@+id/edtAssetName"
            android:layout_marginTop="20dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <Spinner
            android:id="@+id/spAssetGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_min="120dp"
            app:layout_constraintWidth_max="180dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spDepartment"
            android:layout_marginTop="20dp"
            style="@style/Widget.AppCompat.Spinner.Underlined" />

        <Spinner
            android:id="@+id/spLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_min="180dp"
            app:layout_constraintWidth_max="200dp"
            app:layout_constraintTop_toBottomOf="@+id/edtAssetName"
            android:layout_marginTop="20dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            app:layout_constraintRight_toRightOf="parent"/>
        <Spinner
            android:id="@+id/spAccountParty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_min="180dp"
            app:layout_constraintWidth_max="200dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spDepartment"
            android:layout_marginTop="20dp"
            style="@style/Widget.AppCompat.Spinner.Underlined" />

        <TextView
            android:id="@+id/txtText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asset Description"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/spAssetGroup"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Multi line"
            app:layout_constraintTop_toBottomOf="@+id/txtText2"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutWarranty"
            android:layout_width="wrap_content"
            app:layout_constraintWidth_min="180dp"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_calendar"
            android:hint="Expired Warranty"
            android:background="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:layout_constraintTop_toBottomOf="@id/edtDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtWarranty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/txtText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asset SN:"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/edtDescription"
            app:layout_constraintRight_toLeftOf="@+id/txtAssetSN"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/txtAssetSN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/gg/nnnn"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/edtDescription"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textStyle="bold"
            android:textColor="@color/blue_dark"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/txtSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textStyle="bold"
            android:textColor="@color/blue_dark"
            app:layout_constraintRight_toLeftOf="@+id/txtCancel"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>