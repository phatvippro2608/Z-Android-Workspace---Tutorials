<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:context=".MainActivity">
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textSize="24sp"
            android:gravity="center"
            android:background="#009688"
            android:textColor="#ffff00"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Họ tên: "
            android:textSize="20sp"/>
        <EditText
            android:textSize="20sp"
            android:id="@+id/edtHoten"
            android:inputType="text"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="CMND: "
            android:textSize="20sp"/>
        <EditText
            android:textSize="20sp"
            android:id="@+id/edtCMND"
            android:inputType="number"/>
    </TableRow>


    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bằng cấp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#2196F3"
            android:textColor="#ffff00"
            android:layout_span="2"/>
    </TableRow>

    <TableRow>
        <RadioGroup android:orientation="horizontal"
            android:layout_span="2"

            android:id="@+id/grpBangCap">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trung cấp"
                android:textSize="20sp"
                android:id="@+id/radTC"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cao Đẳng"
                android:textSize="20sp"
                android:id="@+id/radCD"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đại học"
                android:textSize="20sp"
                android:id="@+id/radDH"
                android:checked="true"/>
        </RadioGroup>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sở thích"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#2196F3"
            android:textColor="#ffff00"
            android:layout_span="2"/>
    </TableRow>

    <TableRow>
        <LinearLayout android:orientation="horizontal" android:layout_span="2">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chbDocBao"
                android:layout_weight="1"
                android:text="Đọc báo"
                android:checked="true"
                android:textSize="20sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chbDocSach"
                android:layout_weight="1"
                android:text="Đọc sách"
                android:textSize="20sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chbDocCoding"
                android:layout_weight="1"
                android:text="Đọc Coding"
                android:textSize="20sp"/>
        </LinearLayout>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin bổ sung"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#2196F3"
            android:textColor="#ffff00"
            android:layout_span="2"/>
    </TableRow>
    <TableRow
        android:padding="10dp">

        <EditText
            android:id="@+id/edtBS"
            android:layout_span="2"
            android:lines="5"
            android:gravity="left|center"
            android:textSize="20sp"
            android:text="Senior"/>

    </TableRow>
    <TableRow
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:text="Gửi thông tin"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:id="@+id/btnGui"
           />
    </TableRow>
</TableLayout>