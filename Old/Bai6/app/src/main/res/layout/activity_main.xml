<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Các kiểu lập trình sự kiên"
        android:textSize="30sp"
        android:gravity="center"
        android:background="#00ff00"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="80dp"
            android:text="Số a: "
            android:layout_height="wrap_content"
            android:textSize="30sp">
        </TextView>

        <EditText
            android:id="@+id/edtA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="80dp"
            android:text="Số b: "
            android:layout_height="wrap_content"
            android:textSize="30sp">
        </TextView>

        <EditText
            android:id="@+id/edtB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtKQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ket qua"
        android:textSize="30sp"
        android:gravity="center"
        android:background="#00ff00"/>
    <Button
        android:id="@+id/btnTong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnHieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiệu"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnTich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tích"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnThuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thương"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnUCLN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ước chung lớn nhất"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnTHoat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thoát chương trình"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:backgroundTint="#ff0000"/>


</LinearLayout>