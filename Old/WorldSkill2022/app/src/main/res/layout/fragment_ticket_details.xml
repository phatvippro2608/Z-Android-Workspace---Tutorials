<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.TicketDetailsFragment"
        android:paddingTop="16dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/txtTicketsDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ticket Details"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            />







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutScreenshot"
            android:layout_below="@+id/txtTicketsDetails"
            android:layout_above="@+id/btnDownload"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgTicket"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/gray"
                android:contentDescription="@string/preview_picture"
                android:src="@drawable/ic_launcher_background"
                tools:ignore="ImageContrastCheck" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTicketType"
                android:textSize="18sp"
                android:text="Ticket type:"
                android:padding="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTicketAudName"
                android:textSize="18sp"
                android:text="Audience's name:"
                android:padding="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTicketTime"
                android:textSize="18sp"
                android:text="Time:"
                android:padding="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTicketSeat"
                android:textSize="18sp"
                android:text="Seat:"
                android:padding="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgDemo"/>

        </LinearLayout>




        <Button
            android:id="@+id/btnDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_btn"
            android:text="Download"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />

    </RelativeLayout>