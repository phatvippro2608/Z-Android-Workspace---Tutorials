<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaPlayerActivity">

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:maxHeight="300dp"
        app:use_controller="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:auto_show="true"
        app:animation_enabled="false"
        app:controller_layout_id="@layout/custom_media_controller"
        android:background="@drawable/background_dark">
    </androidx.media3.ui.PlayerView>

    <androidx.media3.ui.DefaultTimeBar
        android:id="@+id/timebar_custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-9dp"
        android:layout_marginEnd="-9dp"
        app:buffered_color="#95989F"
        app:layout_constraintBottom_toBottomOf="@+id/playerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerView"
        android:elevation="1dp"
        android:clickable="false"
        app:played_color="#FF0000"
        app:scrubber_color="#FF0000"
        app:unplayed_color="#45424E"/>


    <androidx.media3.ui.DefaultTimeBar
        android:id="@+id/timebar_custom2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-9dp"
        android:layout_marginEnd="-9dp"
        app:buffered_color="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/playerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerView"
        app:played_color="#FF0000"
        app:scrubber_color="#FF0000"
        app:unplayed_color="#00000000"
        app:scrubber_drawable="@drawable/circle_transparent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>